{
    "parser": "@babel/eslint-parser",
    "plugins": [
        "prettier"
    ],
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "prettier/prettier": [
            "error"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ]
    },
    "globals": {
        "__rootdir": "readonly",
        "M": "readonly"
    }
}