<div class='row'>
  <div class='col s12 m10 offset-m1 18 offset-12'>
    <div class='card'>
      <div class='card-image'>
        <img
          src='/images/addproject.png'
          alt='Imagen de creación de proyecto'
        />
        <span class='card-title add-project' style='font-weight: bolder;'>Crear
          Projecto</span>
      </div>
      <form autocomplete='off' action='/project/add' method='post'>
        <div class='card-content card-action'>
          <div class='input-field'>
            <label for='project-name'>
              Nombre del Projecto
            </label>
            <input
              id='project-name'
              type='text'
              required
              name='name'
              placeholder='Ingrese el Nombre del proyecto'
              class='validate'
            />
          </div>
          <div class='input-field'>
            <label for='project-description'>
              Descripción del Projecto
            </label>
            <textarea
              name='description'
              id='project-description'
              required
              cols='30'
              rows='10'
              class='materialize-textarea'
            ></textarea>
          </div>
        </div>
        <div class='card-action'><button
            class='blue darken-3 waves-effect waves-light btn'
          ><i class='material-icons left'>note_add</i> Agregar</button></div>
      </form>
    </div>
  </div>
</div>